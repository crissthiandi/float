	NA.o \
	norm.o \
	qr.o \
	rand.o \
	scale.o \
	solve.o \
	sum.o \
	svd.o \
	sweep.o \
	xpose.o \
	utils/matmult.o \
	utils/symmetrize.o \
	utils/xpose.o

OBJECTS = $(R_SOURCES) $(SLAPACK)

### Start making here.
all: $(SHLIB) buildStaticLib

$(SHLIB): $(OBJECTS)



LIBPATH = ../inst/lib
STATICLIB =	libfloat.a

buildStaticLib: $(STATICLIB)
	-@if test ! -e $(LIBPATH)$(R_ARCH); then mkdir -p $(LIBPATH)$(R_ARCH); fi
	mv $(STATICLIB) $(LIBPATH)$(R_ARCH)

$(STATICLIB): $(OBJECTS)
		$(AR) qc $(STATICLIB) $^



clean:
	rm -rf *.o *.d *.rc *.so* *.dll *.dylib *.a *.lib
